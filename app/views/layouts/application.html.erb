<!DOCTYPE html>
<html>
<head>
  <title>DailyFantasySports</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <div class="col-md-12">

    <% if !flash[:notice].blank? %>
      <div class="alert alert-info" role="alert"><p><%= flash[:notice] %></p></div>
    <% end %>

    <%= yield %>

  </div>
</div>

</body>
</html>
